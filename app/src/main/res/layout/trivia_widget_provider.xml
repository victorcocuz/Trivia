<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_xsmall"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_caption" />

    <TextView
        android:id="@+id/widget_tv_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_small"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_widget" />

    <TextView
        android:id="@+id/widget_tv_show_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_medium_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_caption" />

    <TextView
        android:id="@+id/widget_tv_ask_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_medium_small"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_caption" />

</LinearLayout>