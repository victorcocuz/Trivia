<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/margin_one"
                android:color="@color/design_default_color_primary_dark" />
            <solid android:color="@color/colorIncorrect" />
            <corners android:radius="@dimen/margin_small" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/margin_small" />
            <gradient
                android:angle="90"
                android:centerColor="@android:color/transparent"
                android:centerY="0.92"
                android:endColor="@color/colorShadow"
                android:startColor="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/margin_small" />
            <gradient
                android:angle="180"
                android:centerColor="@android:color/transparent"
                android:centerY="0.987"
                android:endColor="@color/colorShadow"
                android:startColor="@android:color/transparent" />
        </shape>
    </item>

</layer-list>
